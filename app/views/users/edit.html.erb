<div class="container">
 <div class="row">
  <div class="col-lg-4">
  <h1>プロフィール編集</h1>
 </div>
   <div class="col-lg-4">
   <%= form_for(@user, url:user_path,method: :PATCH) do |f| %>

    <h4>名前</h4>
    <%= f.text_field :name %>
    <h4>紹介</h4>
    <%= f.text_area :introduction %>
    <h4>写真</h4>
    <%= f.attachment_field :profile_image %>

    <%= f.submit 'アップデート！！！！！' %>
    <% end %>
   </div>
   <div class="col-lg-4"></div>
 </div>
</div>