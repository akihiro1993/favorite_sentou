  <div class="container">
    <h1>銭湯好き市民一覧</h1>
    <div class="row">
     <div class="col-xs-4">
     <div class="border" style="padding:20px;">
      <h2>👑投稿数ランキング!!</h2>
      <% @all_ranks.each.with_index(1) do|all_rank,i| %>
        <div style= "margin-top:20px;">
        <%= link_to user_path(all_rank.id) do %>
        <p><%= "投稿数第#{i}位は#{all_rank.name}さん!!!" %></p>
         <% end %>
        </div>
     　<% end %>
     </div>
     </div>

     <div class="col-xs-8">

     <table class="table">
	     <thead>
		   <tr>
			<th></th>
			<th>名前</th>
            <th>投稿数</th>
			<th colspan="3"></th>
		  </tr>
	    </thead>

	   <tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, :fill, 50,50, format: 'jpeg',fallback: "no_image.jpg" %></td>
			<td><%= link_to user_path(user.id) do %>
				<%= user.name %></td>
				<% end %>
            <td><%= link_to user_path(user.id) do %>
            	<%= "投稿件数: #{user.posts.count}" %></td>
            	<% end %>
        </tr>
        <% end %>
       </tbody>
     </table>
    </div>
   </div>
  </div>