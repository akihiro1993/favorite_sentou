<div class= "container" date-turbolinks="false">
  <h1><%= @post.user.name %>さんの銭湯投稿</h1>
  <div class="row">
    <div class="col-lg-6">
      <h4>投稿者</h4>
        <P><%= @post.user.name %></P>
      <h4>銭湯名</h4>
        <p><%= @post.title %></p>
      <h4>写真♨</h4>
        <%= attachment_image_tag @post, :image, :fill, 300, 300, format: 'jpg' %>
      <h4>住所</h4>
        <p><%= @post.address %></p>

      <div>
        <% if user_signed_in? && current_user.id == @post.user_id %>
        <h4><%= link_to "編集ページにパス！！！" ,edit_post_path(@post.id) %></h4>
        <h4><%= link_to "削除！" , post_path(@post.id), method: :delete,"data-confirm" => "本当に削除しますか？" %></h4>
        <% end %>
      </div>
    </div>

    <div class="col-lg-6">
      <h4>銭湯紹介</h4>
        <p><%= @post.body %></p>

        <!--いいね機能-->
      <% if user_signed_in? %>
       <div class="post_<%= @post.id %>">
        <%= render "posts/favorite", post: @post %>
       </div>
      <% end %>
       <!--いいね終-->

       <!--コメント機能-->
       <% if user_signed_in? %>
       <div>
         <%= form_with model: [@post,@post_comment], data:{remote: true} do |f| %>
         <%= f.text_area :comment, rows:"5" %>
         <%= f.submit "送信する" %>
         <% end %>
        </div>
        <% else %>
      <div>
        <h3>ログインしてコメントしよう！</h3>
        <% end %>

        <div class="comment_<%= @post.id %>">
          <%= render "posts/post_comment", post: @post %>
        </div>
         <!--コメント機能終-->
         <!-- マップ埋め込み-->
         <div id="map"></div>
         <style>
          #map{
          height: 400px;
          width:400px;
           }
          </style>
        </div>
      </div>
    </div>

<script type="text/javascript">
    function initMap() {

        var test ={lat: <%= @post.latitude %>, lng: <%= @post.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: test
        });
        var transitLayer = new google.maps.TransitLayer();
        transitLayer.setMap(map);

        var contentString = '住所：<%= @post.address %>';
        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position:test,
            map: map,
            title: contentString
        });

        marker.addListener('click', function() {
            infowindow.open(map, marker);
        });
    }
</script>

<script async defer
        src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap">
</script>








