<h1>投稿編集</h1>
<%= form_for(@post) do |f| %>

<h4>銭湯名♨</h4>
<%= f.text_field :title %>

<h4>銭湯紹介♨</h4>
<%= f.text_area :body %>

<h4>銭湯住所♨</h4>
<%= f.text_field :address %>

<h4>写真♨</h4>
<%= attachment_image_tag @post, :image, :fill, 300, 300, format: 'jpg' %>
<%= f.attachment_field :image %>

<div style="margin-top: 50px;">
<%= f.submit '編集するよ！素敵な銭湯にlets go!!!♨' %>
</div>

<% end %>
