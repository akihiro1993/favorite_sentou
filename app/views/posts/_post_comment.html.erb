<!--コメント機能フォーム非同期専用-->
<% post.post_comments.each do |post_comment| %>
 <span><%= post_comment.created_at.strftime('%Y/%m/%d') %></span>
 <span><%= link_to post_comment.user.name,user_path(post_comment.user.id)  %></span>
 <span><%= post_comment.comment %></span>
 <span><% if post_comment.user == current_user %>
 		<%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete,remote: true  %><br>
 	<% end %>
 </span>
 <% end %>
