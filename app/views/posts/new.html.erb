<h1>新規投稿♨</h1>

<%= form_for(@post, url:'/posts') do |f| %>

<h4>銭湯名♨</h4>
<%= f.text_field :title %>

<h4>銭湯紹介♨</h4>
<%= f.text_area :body %>

<h4>銭湯住所♨</h4>
<%= f.text_field :address %>

<h4>写真♨</h4>
<%= f.attachment_field :image %>

<div style="margin-top: 50px;">
<%= f.submit '素敵な銭湯にlets go!!!♨' %>
</div>

<% end %>

