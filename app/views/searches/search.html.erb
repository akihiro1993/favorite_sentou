<h2>✨検索結果一覧✨</h2>

<table class="table table-hover table-inverse">
　<% if @range == '2' %>
  <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
     <% @post.each do |post| %>
     <tr>
      <td>
       <%= link_to(post.user) do %>
       <%= attachment_image_tag asset_path(post.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
       <p><%= post.user.name %></p>
       <% end %>
      </td>
      <td>
       <%= link_to post.title, post, class: "post_#{post.id}" %>
      </td>
      <td><%= post.body %></td>
     </tr>
     <% end %>
  </tbody>

  <% else %>
  <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
    <% @user.each do |user| %>
     <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
      <td><%= user.name%></td>
      <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
     </tr>
    <% end %>
   </tbody>
   <% end %>
 </table>